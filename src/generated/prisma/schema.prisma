generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tarea {
  id        Int       @id @default(autoincrement())
  texto     String
  categoria String
  fecha     DateTime?
  creadaEn  DateTime  @default(now())
}
